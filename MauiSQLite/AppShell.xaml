<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiSQLite.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiSQLite"
    Shell.FlyoutBehavior="Disabled"
    Title="MauiSQLite">

    <TabBar >
        <Tab Title="Home" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate local:IntroPage}" Route="IntroPage"  />
        </Tab>
        <Tab Title="Student Info" Icon="pers.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage"  />
        </Tab>
        <Tab Title="University" Icon="unii.png">
            <ShellContent ContentTemplate="{DataTemplate local:University}" Route="University"  />
        </Tab>
        <Tab Title="Completion" Icon="check.png">
            <ShellContent ContentTemplate="{DataTemplate local:Informations}" Route="Informations"  />
        </Tab>

        <Tab Title="Payment" Icon="coin.png">
            <ShellContent ContentTemplate="{DataTemplate local:Payment}" Route="Payment"  />
        </Tab>

    </TabBar>

</Shell>
